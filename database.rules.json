{
  "rules": {
    ".read": false,
    ".write": false,

    "presence": {
      "$tenantId": {
        ".read": "auth != null",
        "$userId": {
          ".write": "auth != null && auth.uid == $userId"
        }
      }
    },
    "sessions": {
      "$tenantId": {
        ".read": "auth != null",
        "$sessionId": {
          ".read": "auth != null",
          ".write": "auth != null && newData.child('userId').val() == auth.uid"
        }
      }
    },
    "cellActivities": {
      "$tenantId": {
        ".read": "auth != null",
        "$activityId": {
          ".read": "auth != null",
          ".write": "auth != null && newData.child('userId').val() == auth.uid"
        }
      }
    },
    "cellLocks": {
      "$tenantId": {
        ".read": "auth != null",
        "$lockId": {
          ".read": "auth != null",
          ".write": "auth != null && newData.child('userId').val() == auth.uid"
        }
      }
    },
    "selectedCells": {
      "$tenantId": {
        ".read": "auth != null",
        "$sessionId": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    },

    "tenants": {
      "$tenantId": {
        "collaborateurs": {
          ".read": "auth != null",
          ".write": "auth != null",
          ".indexOn": ["nom", "prenom", "email", "userId"]
        },
        "disponibilites": {
          ".read": "auth != null",
          ".write": "auth != null",
          ".indexOn": ["date", "collaborateurId"]
        },
        "activationCodes": {
          "$code": {
            ".read": true,
            ".write": "auth != null"
          }
        },
        "users": {
          ".read": false,
          ".write": false
        }
      }
    }
  }
}