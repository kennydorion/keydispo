{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/index.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "cleanUrls": true
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080,
      "rules": "firestore-emulator.rules"
    },
    "database": {
      "port": 9000,
      "rules": "database.rules.json"
    },
    "ui": {
      "enabled": true,
      "port": 4001
    },
    "singleProjectMode": true,
    "logging": {
      "quiet": true
    }
  },
  "database": {
    "rules": "database.rules.json"
  }
}
